<div class="dash-nav">
  <a href="/profile/<%=current_user.id %>/edit">Edit your information</a> |
  <a href="/profile/<%= current_user.id %>/delete" alt="Delete your profile">Delete your account</a>
</div>

<h1 class="dash-welcome">Hi, <%= current_user.first_name %>!</h1>

<div id="create-survey">
  <h2>Create A New Survey</h2>
  <hr class="divider"/>
  <% if @errors %>
    <% @errors.each do |error| %>
      <p class="center errors"><%= error %></p>
   <% end %>
  <% end %>
  <form action="/survey/create" method="POST" class="dashboard-create">
    <label for="title">Title:
    <input type="text" name="title" placeholder="Survey Title">
    </label>
    <label for="description">Description:
    <input type="text" name="description" placeholder="Survey Description">
    </label>
    <input type="submit" value="Let's go!">
  </form>
</div>

<div id="own-results">
  <h2>Your Surveys</h2>
  <hr class="divider"/>
  <table class="your-surveys">
    <thead>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </thead>
  <% @surveys.each do | survey | %>
  <tr>
    <td><%= survey.title %></td>
    <td><%= survey.description %></td>
    <td>
      <a href="/survey/results/<%= survey.id %>" alt"View the results of <%= survey.title %>">
        View Results
      </a>
    </td>
    <td>
      <a href="/survey/create/<%= survey.id %>/add_question" alt"Edit <%= survey.title %>">
        Edit Survey
      </a>
    </td>
  </tr>
  <% end %>
  </table>
</div>
 


<div id="participant-results">
  <h2>Surveys You've Participated In</h2>
  <hr class="divider"/>
  <table class="your-surveys">
    <thead>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </thead>
  <% current_user.taken_surveys.each do | survey | %>
  <tr>
    <td><%= survey.title %></td>
    <td><%= survey.description %></td>
    <td>
      <a href="/survey/results/<%= survey.id %>" alt"View the results of <%= survey.title %>">
        View Results
      </a>
    </td>
    <td> </td>
  </tr>
  <% end %>
  </table>
</div>
